@model News

@{
	ViewData["Title"] = @Model.Title;
}

<div class="card col-md-12 col-12">
	<img class="card-img-top mt-3" src="../@Model.ImagePath" alt="Card image cap">
	<div class="card-body">
		<h2 class="card-title">@Model.Title</h2>
		<p class="card-text">@Html.Raw(@Model.Description)</p>
		@if (User.Identity.IsAuthenticated)
		{
			<a class="btn btn-primary" name="Edit" asp-controller="News" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
			<a class="btn btn-danger" name="Delete" asp-controller="News" asp-action="Remove" asp-route-id="@Model.Id" onclick="return confirm('Вы уверены, что хотите это удалить?');">Удалить</a>
		}
	</div>
	<div class="card-footer text-muted mb-3">
		Загружено @Model.UploadDate.ToLongDateString() <br />
		Последнее редактирование  @Model.EditDate.ToLongDateString()
	</div>
</div>