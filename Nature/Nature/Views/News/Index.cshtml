@model IEnumerable<News>

@{
	ViewData["Title"] = "Index";
}

<!-- Page Content -->
<div class="container">

	<div class="row">

		<!-- Blog Entries Column -->
		<div class="col-md-8">

			<h1 class="my-4">
				Новости
			</h1>

			<!-- Blog Post -->
			@if (Model.Any())
			{
				@foreach (var news in Model)
				{
					<partial name="NewsPostPartial" model="@news" />
				}
			}
			else
			{
				<h3>No news for now.</h3>
			}

			<!-- Pagination -->
			<ul class="pagination justify-content-center mb-4">
				<li class="page-item">
					<a class="page-link" href="#">&larr; Older</a>
				</li>
				<li class="page-item disabled">
					<a class="page-link" href="#">Newer &rarr;</a>
				</li>
			</ul>

		</div>

		<!-- Sidebar Widgets Column -->
		<div class="col-md-4">

			<!-- Search Widget -->
			<div class="card my-4">
				<h5 class="card-header">Manage</h5>
				<div class="card-body">
					<div class="input-group">
						<a class="btn btn-dark" name="Index" asp-controller="News" asp-action="New">New News</a>
					</div>
				</div>
			</div>

			<!-- Search Widget -->
			<div class="card my-4">
				<h5 class="card-header">Search</h5>
				<div class="card-body">
					<div class="input-group form-inline">
						<form asp-controller="News" asp-action="Index" method="get" role="form" enctype="multipart/form-data">
							<input type="text" class="form-control w-auto" id="title" name="title" placeholder="Search for...">
							<input type="submit" class="btn btn-dark" value="Save" />
						</form>
					</div>
				</div>
			</div>

			<!-- Side Widget -->
			<div class="card my-4">
				<h5 class="card-header">Side Widget</h5>
				<div class="card-body">
					You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
				</div>
			</div>

		</div>

	</div>
	<!-- /.row -->

</div>
<!-- /.container -->
