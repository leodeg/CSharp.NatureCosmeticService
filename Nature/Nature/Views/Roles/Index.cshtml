@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
	ViewData["Title"] = "Index";
}

<h2>Список ролей</h2>
<table class="table">
	@foreach (var role in Model)
	{
		<tr>
			<td>@role.Name</td>
			<td>
				<form asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" method="post">
					<button type="submit" class="btn btn-sm btn-danger">
						Удалить
					</button>
				</form>
			</td>
		</tr>
	}
</table>
<a class="btn btn-dark" asp-controller="Roles" asp-action="Create">Добавить роль</a>
<a class="btn btn-dark" asp-controller="Roles" asp-action="UserList">Список пользователей</a>

