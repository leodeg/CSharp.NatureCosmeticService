@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
	ViewData["Title"] = "Роли";
}

<h2>Список ролей</h2>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Name</td>
				<td>
					<form asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id" method="post">
						@if (role.Name != Roles.Administrator && role.Name != Roles.Editor)
						{
							<button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите это удалить?');">
								Удалить
							</button>
						}
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
<a class="btn btn-dark" asp-controller="Roles" asp-action="Create">Добавить роль</a>
<a class="btn btn-dark" asp-controller="Roles" asp-action="UserList">Список пользователей</a>

