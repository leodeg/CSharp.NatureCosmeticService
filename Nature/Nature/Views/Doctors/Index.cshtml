@model IEnumerable<Doctor>

@{
	ViewData["Title"] = "Index";
}


<div class="container">

	<div class="row">
		<div class="col-md-9">
			@if (!@Model.Any())
			{
				<h3>No any doctors information for now.</h3>
			}
			else
			{

				@foreach (var service in Model)
				{
					<partial name="DoctorPreviewPartial" model="@service" />
				}
			}
		</div>
		<div class="col-md-3">
			<div class="card my-4">
				<h5 class="card-header">Manage</h5>
				<div class="card-body">
					<div class="input-group">
						<a class="btn btn-dark m-1" name="Index" asp-controller="DoctorCategories" asp-action="Index">Manage Categories</a>
						<a class="btn btn-dark m-1" name="Index" asp-controller="Doctors" asp-action="New">New Doctor</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>