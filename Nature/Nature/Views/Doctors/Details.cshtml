@model Doctor

@{
	ViewData["Title"] = @Model.FirstName + " " + @Model.LastName;
}

<div class="container mt-3 mb-4">
	<div class="row">
		<div class="col-lg-3">
			<div class="g-item-doctors-details" style="background-image:url(../@Model.ImagePathLink)"></div>
			<div class="figure-caption p-3 text-center">
				<h6><a asp-controller="Doctors" asp-action="Index" asp-route-title="@Model.DoctorCategory.Title">@Model.DoctorCategory.Title</a></h6>
				<hr class="divider" />
				<h3>@Model.FirstName @Model.LastName</h3>
				<hr class="divider" />
				<h4>Контакты</h4>
				<h6>Email: @Model.Contacts.Email</h6>
				<h6>Телефон: @Model.Contacts.Phone</h6>

				<div class="row justify-content-center">
					@if (!string.IsNullOrEmpty(Model.Contacts.Website))
					{
						<a class="social-link" href="@Model.Contacts.Website"><i class="fas fa-newspaper"></i></a>
					}
					@if (!string.IsNullOrEmpty(Model.Contacts.YouTube))
					{
						<a class="social-link" href="@Model.Contacts.YouTube"><i class="fab fa-youtube"></i></a>
					}
					@if (!string.IsNullOrEmpty(Model.Contacts.Instagram))
					{
						<a class="social-link" href="@Model.Contacts.Instagram"><i class="fab fa-instagram"></i></a>
					}
					@if (!string.IsNullOrEmpty(Model.Contacts.LinkedIn))
					{
						<a class="social-link" href="@Model.Contacts.LinkedIn"><i class="fab fa-linkedin"></i></a>
					}
					@if (!string.IsNullOrEmpty(Model.Contacts.Facebook))
					{
						<a class="social-link" href="@Model.Contacts.Facebook"><i class="fab fa-facebook"></i></a>
					}
					@if (!string.IsNullOrEmpty(Model.Contacts.VKontakte))
					{
						<a class="social-link" href="@Model.Contacts.VKontakte"><i class="fab fa-vk"></i></a>
					}
					@if (!string.IsNullOrEmpty(Model.Contacts.Twitter))
					{
						<a class="social-link" href="@Model.Contacts.Twitter"><i class="fab fa-twitter"></i></a>
					}
				</div>

			</div>
			
			<a href="#" class="btn btn-custom-primary btn-block py-3 px-4 mb-3" data-toggle="modal" data-target="#add-contact-modal-view">Оставьте заявку</a>
		</div>
		<div class="col-lg-9  mt-4">
			@if (string.IsNullOrEmpty(Model.Description))
			{
				<p>Описание отсутствует</p>
			}
			else
			{
				<p>@Html.Raw(@Model.Description)</p>
			}

			@if (User.Identity.IsAuthenticated)
			{
				<p class="btn float-right">
					<a class="btn btn-warning" name="Edit" asp-controller="Doctors" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Редактировать</a>
					<a class="btn btn-danger" name="Delete" asp-controller="Doctors" asp-action="Remove" asp-route-id="@Model.Id" onclick="return confirm('Вы уверены, что хотите это удалить?');"><i class="fas fa-trash"></i> Удалить</a>
				</p>
			}
		</div>
	</div>
</div>
