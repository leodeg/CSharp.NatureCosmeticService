@model Doctor

@{
	ViewData["Title"] = "Details";
}

<div class="row">
	<div class="col-sm-3 col-md-3 col-lg-3">
		<img class="custom-image d-block" src="../@Model.ImagePath" alt="@Model.FirstName Thumbnail" />
		<div class="figure-caption p-3 text-center">
			<h3>@Model.FirstName</h3>
			<h3>@Model.LastName</h3>
			<h3>@Model.Contacts.Email</h3>
			<h3>@Model.Contacts.Phone</h3>
		</div>
	</div>
	<div class="col-sm-6 col-md-7 col-lg-9">
		<p>@Model.Description</p>
		<p class="btn float-right">
			<a class="btn btn-dark" name="Edit" asp-controller="Doctors" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
			<a class="btn btn-dark" name="Delete" asp-controller="Doctors" asp-action="Remove" asp-route-id="@Model.Id">Delete</a>
		</p>
	</div>
</div>

<div class="container">


</div>

