@model Doctor

@{
	ViewData["Title"] = @Model.FirstName + " " + @Model.LastName;
}

<div class="container mt-3 mb-4">
	<div class="row">
		<div class="col-lg-3">
			<div class="g-item-doctors-details" style="background-image:url(../@Model.ImagePathLink)"></div>
			<div class="figure-caption p-3 text-center">
				<h3>@Model.FirstName @Model.LastName</h3>
				<h5>Email: @Model.Contacts.Email</h5>
				<h5>Телефон: @Model.Contacts.Phone</h5>
			</div>
			<a class="btn btn-custom-primary btn-block py-2" name="New" asp-controller="ContactUs" asp-action="New">Оставьте заявку</a>
		</div>
		<div class="col-lg-9  mt-4">
			@if (string.IsNullOrEmpty(Model.Description))
			{
				<p>Описание отсутствует</p>
			}
			else
			{
				<p>@Html.Raw(@Model.Description)</p>
			}

			@if (User.Identity.IsAuthenticated)
			{
				<p class="btn float-right">
					<a class="btn btn-dark" name="Edit" asp-controller="Doctors" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
					<a class="btn btn-danger" name="Delete" asp-controller="Doctors" asp-action="Remove" asp-route-id="@Model.Id" onclick="return confirm('Вы уверены, что хотите это удалить?');">Удалить</a>
				</p>
			}
		</div>
	</div>
</div>
