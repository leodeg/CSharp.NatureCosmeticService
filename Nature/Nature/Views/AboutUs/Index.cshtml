@model AboutUs

@{
	ViewData["Title"] = "О компании";
}

@if (User.Identity.IsAuthenticated)
{
	<!-- HEADER -->
	<section id="header" class="py-2 bg-primary text-white">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>
						<i class="fas fa-cog"></i> Управление информацией компании
					</h1>
				</div>
			</div>
		</div>
	</section>

	<!-- ACTIONS -->
	<section id="actions" class="py-4 mb-4 bg-light">
		<div class="container">
			<div class="row">
				<div class="px-3">
					<a class="btn btn-warning" name="Edit" asp-controller="AboutUs" asp-action="Edit"><i class="fas fa-edit"></i> Редактировать</a>
				</div>
			</div>
		</div>
	</section>
}

<section class="hero-wrap hero-wrap-2 mb-3" style="background-image: url('../img/design/bg_3.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
			<div class="col-md-12 ftco-animate text-center">
				<h1 class="mb-3 bread">@ViewData["Title"]</h1>
			</div>
		</div>
	</div>
</section>

<section id="description mb-3">
	<div class="container">
		<div class="col-lg-12">
			<div>
				<h1 class="display-3">@Model.Title</h1>
				<hr class="my-4">
				<p>
					@Html.Raw(@Model.Description)
				</p>
				<hr class="my-4">
				<h3 class="mb-3">Контакты</h3>
				<div>
					<p><i class="fas fa-phone"></i> Телефон: @Model.Contacts.Phone</p>
					<p><i class="fas fa-inbox"></i> Email: @Model.Contacts.Email</p>
					<p><i class="fas fa-map-marker-alt"></i> Наш адрес: @Model.Contacts.Address</p>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="container" id="contact-us">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header text-center">
				<h4>Оставьте заявку</h4>
			</div>
			<div class="card-body">
				<form id="contact-modal-form" method="post" role="form">
					<fieldset>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label for="firstName" class="col-form-label">Имя</label>
									<input name="firstName" required class="form-control" />
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label for="lastName" class="col-form-label">Фамилия</label>
									<input name="lastName" required class="form-control" />
								</div>
							</div>
						</div>


						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label for="phone" class="col-form-label">Телефон</label>
									<input name="phone" required class="form-control" />
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label for="email" class="col-form-label">Email</label>
									<input name="email" required class="form-control" />
								</div>
							</div>
						</div>

						<div class="col lg-12">
							<div class="form-group">
								<label for="message" class="col-form-label">Сообщение</label>
								<textarea name="message" id="text-editor" rows="5" class="form-control"></textarea>
							</div>
						</div>

						<div class="col-lg-12">
							<div class="form-group">
								<input id="button-submit" type="submit" class="btn btn-custom-primary btn-block" value="Отправить" />
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script src="~/js/about-us-form.js" asp-append-version="true"></script>
}