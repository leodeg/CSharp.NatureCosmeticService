@model AboutUs

@{
	ViewData["Title"] = "О компании";
}

@if (User.Identity.IsAuthenticated)
{
	<div class="card my-4">
		<h5 class="card-header">Управление</h5>
		<div class="card-body">
			<div class="input-group">
				<a class="btn btn-primary" name="Edit" asp-controller="AboutUs" asp-action="Edit">Редактировать</a>
			</div>
		</div>
	</div>
}

@if (Model != null)
{
	<div class="jumbotron">
		<h1 class="display-3">@Model.Title</h1>
		<hr class="my-4">
		<p>
			@Html.Raw(@Model.Description)
		</p>
		<hr class="my-4">
		<p>Телефон: @Model.Contacts.Phone</p>
		<p>Email: @Model.Contacts.Email</p>
		<p>Наш адрес: @Model.Contacts.Address</p>
	</div>
}
