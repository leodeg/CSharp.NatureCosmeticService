@model AboutUs
@{
	ViewData["Title"] = "Форма о компании";
}

<div class="container">
	<h2>Редактировать информацию о компании</h2>

	<div class="row">
		<div class="col-md-12">
			<form asp-controller="AboutUs" asp-action="Save" method="post" role="form" enctype="multipart/form-data">
				<div asp-validation-summary="All" class="text-danger"></div>

				<input asp-for="@Model.Id" type="hidden" />

				<div class="form-group">
					<label asp-for="@Model.Title" class="col-md-2 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Title" class="form-control" />
						<span asp-validation-for="@Model.Title" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Phone" class="col-md-3 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.Phone" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Phone" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Email" class="col-md-2 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.Email" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Email" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Country" class="col-md-2 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.Country" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Country" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.City" class="col-md-2 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.City" class="form-control" />
						<span asp-validation-for="@Model.Contacts.City" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Address" class="col-md-2 col-form-label"></label>
					<div class="col-md-12">
						<input asp-for="@Model.Contacts.Address" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Address" class="text-danger"></span>
					</div>
				</div>

				<h3 class="mt-4">Социальный сети</h3>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Website" class="col-md-12 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.Website" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Website" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.YouTube" class="col-md-12 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.YouTube" class="form-control" />
						<span asp-validation-for="@Model.Contacts.YouTube" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Facebook" class="col-md-12 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.Facebook" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Facebook" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.LinkedIn" class="col-md-12 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.LinkedIn" class="form-control" />
						<span asp-validation-for="@Model.Contacts.LinkedIn" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.VKontakte" class="col-md-12 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.VKontakte" class="form-control" />
						<span asp-validation-for="@Model.Contacts.VKontakte" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Contacts.Twitter" class="col-md-12 col-form-label"></label>
					<div class="col-md-8">
						<input asp-for="@Model.Contacts.Twitter" class="form-control" />
						<span asp-validation-for="@Model.Contacts.Twitter" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="@Model.Description" class="col-md-2 col-form-label"></label>
					<div class="col-md-12">
						<textarea asp-for="@Model.Description" id="text-editor" rows="5" class="form-control"></textarea>
						<span asp-validation-for="@Model.Description" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-12">
						<input type="submit" class="btn btn-custom-primary btn-block" value="Сохранить" />
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section scripts
{
	<link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css">
	<script src="~/lib/trumbowyg/trumbowyg.min.js"></script>

	<script>
		$('#text-editor').trumbowyg();
	</script>
}
