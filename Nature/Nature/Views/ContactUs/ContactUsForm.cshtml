@model ContactUs

@{
	ViewData["Title"] = "Форма контактов";
}

@if (Model.Id > 0)
{
	<h2>Редактировать: @Model.FirstName @Model.LastName</h2>
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-header text-center">
			<h4>Оставьте заявку</h4>
		</div>
		<div class="card-body">
			<form asp-controller="ContactUs" asp-action="Save" method="post" role="form">
				<input asp-for="@Model.Id" type="hidden" />

				<div class="row">
					<div class="col-lg-6">
						<div class="form-group">
							<label asp-for="@Model.FirstName" class="col-form-label"></label>
							<div>
								<input asp-for="@Model.FirstName" class="form-control" />
								<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="form-group">
							<label asp-for="@Model.LastName" class="col-form-label"></label>
							<div>
								<input asp-for="@Model.LastName" class="form-control" />
								<span asp-validation-for="@Model.LastName" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-lg-6">
						<div class="form-group">
							<label asp-for="@Model.Phone" class="col-form-label"></label>
							<div>
								<input asp-for="@Model.Phone" class="form-control" />
								<span asp-validation-for="@Model.Phone" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="form-group">
							<label asp-for="@Model.Email" class="col-form-label"></label>
							<div>
								<input asp-for="@Model.Email" class="form-control" />
								<span asp-validation-for="@Model.Email" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>

				<div class="col lg-12">
					<div class="form-group">
						<label asp-for="@Model.Description" class="col-form-label"></label>
						<div>
							<textarea asp-for="@Model.Description" id="text-editor" rows="5" class="form-control"></textarea>
							<span asp-validation-for="@Model.Description" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="col-lg-12">
					<div class="form-group">
						<div>
							<input type="submit" class="btn btn-primary btn-block" value="Отправить" />
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
