@model IEnumerable<ServiceCategory>

@{
	ViewData["Title"] = "Категории услуг";
}

<h1>Service Categories</h1>

<p>
	<a class="btn btn-dark" name="New" asp-controller="ServiceCategories" asp-action="New">New</a>
</p>

<table id="serviceCategories" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Any())
		{
			@foreach (var category in Model)
			{
				<tr>
					<th>@category.Title</th>
					<th>
						<a class="btn btn-dark" name="Edit" asp-controller="ServiceCategories" asp-action="Edit" asp-route-id="@category.Id">Редактировать</a>
						<a class="btn btn-danger" name="Remove" asp-controller="ServiceCategories" asp-action="Remove" asp-route-id="@category.Id">Удалить</a>
					</th>
				</tr>
			}
		}
	</tbody>
</table>

