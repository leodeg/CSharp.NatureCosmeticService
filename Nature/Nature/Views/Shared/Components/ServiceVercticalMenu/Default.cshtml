@model IEnumerable<ServiceCategory>
	
	<h4 class="text-center">Categories</h4>
	<ul class="list-group list-group-flush" >
		<li class="list-group-item p-1">
			<a asp-controller="Services"
			   asp-action="Index"
			   asp-route-categoryName=""
			   class="nav-link text-dark pl-3">
				View all services
			</a>
		</li>
		@foreach (var category in Model)
		{
			<li class="list-group-item p-1">
				<a asp-controller="Services" asp-action="Index"
				   asp-route-categoryName="@category.Title"
				   class="nav-link text-dark pl-3">
					@category.Title
				</a>
			</li>
		}
	</ul>
